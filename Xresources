! Set a nice truetype font and its size
xterm*faceName: dejavu sans mono
XTerm*allowBoldFonts: false
xterm*faceSize: 11
xterm*foreground: #ffffff
xterm*background: #121e1e
xterm*termName: xterm-256color

! Every shell is a login shell
xterm*loginshell: true

! Scrollback ... a lot of it
xterm*savelines: 1087
